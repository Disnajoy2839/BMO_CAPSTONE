@model BOMLink.Models.Manufacturer

@{
	ViewData["Title"] = "Manufacturer Details";
}

<div class="container-fluid mt-4">
	<div class="row">
		<!-- Sidebar Section -->
		<aside class="col-md-3">
			<div class="card shadow-sm p-3">
				<h5 class="fw-bold">Actions</h5>
				<a asp-action="CreateOrEdit" asp-route-id="@Model.Id" class="btn btn-outline-warning w-100 mb-2">Edit</a>
				<a asp-action="Index" class="btn btn-outline-secondary w-100 mb-3">Back to List</a>
			</div>
		</aside>

		<!-- Main Content Section -->
		<main class="col-md-9">
			<h2>@ViewData["Title"]</h2>

			<table class="table">
				<tr><th>Name:</th><td>@Model.Name</td></tr>
				<tr><th>Created At:</th><td>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td></tr>
				<tr><th>Last Updated:</th><td>@Model.UpdatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td></tr>
			</table>
		</main>
	</div>
</div>
