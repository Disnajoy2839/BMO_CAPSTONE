@model BOMLink.ViewModels.CustomerViewModels.CustomerDetailsViewModel

@{
	ViewData["Title"] = "Customer Details";
}

<div class="container-fluid mt-4">
	<div class="row">
		<!-- Sidebar Section -->
		<aside class="col-md-3">
			<div class="card shadow-sm p-3">
				<h5 class="fw-bold">Actions</h5>
				<a asp-action="CreateOrEdit" asp-route-id="@Model.Id" class="btn btn-outline-warning w-100 mb-2">Edit</a>
				<a asp-action="Index" class="btn btn-outline-secondary w-100 mb-3">Back to List</a>
			</div>
		</aside>

		<!-- Main Content Section -->
		<main class="col-md-9">
			<h2>Customer Details</h2>

			<table class="table">
				<tr><th>Name:</th><td>@Model.Name</td></tr>
				<tr><th>Code:</th><td>@Model.CustomerCode</td></tr>
				<tr><th>Address:</th><td>@(string.IsNullOrEmpty(Model.Address) ? "N/A" : Model.Address)</td></tr>
				<tr><th>City:</th><td>@(string.IsNullOrEmpty(Model.City) ? "N/A" : Model.City)</td></tr>
				<tr><th>Province:</th><td>@(string.IsNullOrEmpty(Model.Province) ? "N/A" : Model.Province)</td></tr>
				<tr><th>Contact Name:</th><td>@(string.IsNullOrEmpty(Model.ContactName) ? "N/A" : Model.ContactName)</td></tr>
				<tr><th>Contact Phone:</th><td>@(string.IsNullOrEmpty(Model.ContactPhone) ? "N/A" : Model.ContactPhone)</td></tr>
				<tr><th>Contact Email:</th><td>@(string.IsNullOrEmpty(Model.ContactEmail) ? "N/A" : Model.ContactEmail)</td></tr>
				<tr><th>Created At:</th><td>@Model.CreatedAt</td></tr>
				<tr>
					<th>Last Updated:</th>
					<td>@Model.UpdatedAt</td>
				</tr>
			</table>
		</main>
	</div>
</div>