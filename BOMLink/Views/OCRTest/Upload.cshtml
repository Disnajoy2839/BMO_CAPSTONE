@{
    ViewData["Title"] = "Upload File for OCR Table Extraction";
}

<h2>Upload File for OCR Table Extraction</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="Upload" asp-controller="OCRTest" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="file" class="form-label">Upload an image or PDF</label>
        <input type="file" name="file" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Extract Table</button>
</form>
